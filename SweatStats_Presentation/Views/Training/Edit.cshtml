@model TrainingViewModel
@{
    ViewData["Title"] = Model.Name;
}

<h1>@Model.Name</h1>
<a class="btn btn-primary" asp-controller="Oefening" asp-action="Add" asp-route-id="@Model.Id">Add oefening</a>
@foreach (var oefening in Model.oefeningen)
{
    <div class="card">
        <div class="card-body">
            <h5 class="card-title">@oefening.Name</h5>
            <a class="btn btn-primary" asp-controller="Oefening" asp-action="Edit" asp-route-id="@oefening.Id">Edit</a>
            <a class="btn btn-danger" asp-controller="Oefening" asp-action="Delete" asp-route-id="@oefening.Id">Delete</a>
        </div>
    </div>

}